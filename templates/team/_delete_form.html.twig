<form method="post" action="{{ path('app_team_delete', {'id': team.id}) }}" onsubmit="return confirm('Are you sure you want to delete this team? All players linked to it will be deleted as well!!');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
    <button class="btn mb-0 bg-gradient-dark btn-md w-100 null my-4 mb-2">Delete</button>
</form>
