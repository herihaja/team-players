{% extends 'base.html.twig' %}

{% block title %}Transfert player{% endblock %}

{% block body %}
<div class="row">
        <div class="mx-auto col-xl-4 col-lg-5 col-md-8 d-flex flex-column">
            <div class="card">
                <div class="pb-0 card-header text-start">
                    <h3 class="font-weight-bolder text-success text-gradient"> Transfert player to another team</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <label>Name</label>
                    <div class="form-group">
                        <div class="">
                            {{ player.name }} {{ player.surname }}
                        </div>
                    </div>
                    <label>Actual team</label>
                    <div class="form-group">
                        <div class="">
                            {{ player.team }}
                        </div>
                    </div>
                    <label>Amount</label>
                    <div class="form-group">
                        <div class="">
                            {{ form_widget(form.price, {'attr': {'class': 'form-control form-control-default'} }) }}
                        </div>
                    </div>
                    <label>Destination team</label>
                    <div class="form-group">
                        <div class="">
                            {{ form_widget(form.destination, {'attr': {'class': 'form-control form-control-default'} }) }}
                        </div>
                    </div>
                    <div class="text-center">
                        <button class="btn mb-0 bg-gradient-success btn-md w-100 null my-4 mb-2">{{ button_label|default('Save') }}</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}