<form method="post" action="{{ path('app_player_delete', {'id': player.id}) }}" onsubmit="return confirm('Are you sure you want to delete this player?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.id) }}">
    <button class="btn mb-0 bg-gradient-dark btn-md w-100 null my-4 mb-2">Delete</button>
</form>
